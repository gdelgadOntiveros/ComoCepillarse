<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tavom.comocepillarse.CepillaDientes">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_random"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cepilla_tus_dientes" />

            <TextView
                android:id="@+id/titulo_random"
                style="@style/Titulos"
                android:text="@string/titulo_cepilla_tus_dientes" />

            <TextView
                android:id="@+id/texto_random"
                style="@style/Textos"
                android:text="@string/texto_cepilla_tus_dientes" />

            <Button style="@style/Buttons" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
