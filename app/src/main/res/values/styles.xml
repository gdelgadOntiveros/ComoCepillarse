<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F06292</item>
        <item name="colorPrimaryDark">#E91E63</item>
        <item name="colorAccent">#9C27B0</item>
    </style>

    <style name="Titulos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Textos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:text">@string/boton</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:onClick">inicioApp</item>
        <item name="android:textColor">#E91E63</item>
    </style>

</resources>
